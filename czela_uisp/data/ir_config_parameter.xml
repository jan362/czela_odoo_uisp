<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default UISP Configuration Parameters -->
        <!-- Note: These should be configured per installation -->

        <record id="uisp_base_url_param" model="ir.config_parameter">
            <field name="key">uisp.base_url</field>
            <field name="value"></field>
        </record>

        <record id="uisp_api_key_param" model="ir.config_parameter">
            <field name="key">uisp.api_key</field>
            <field name="value"></field>
        </record>

        <record id="uisp_verify_ssl_param" model="ir.config_parameter">
            <field name="key">uisp.verify_ssl</field>
            <field name="value">false</field>
        </record>

    </data>
</odoo>
