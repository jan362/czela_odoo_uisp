<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sync UISP devices every 15 minutes -->
        <record id="ir_cron_sync_uisp_devices" model="ir.cron">
            <field name="name">UISP: Sync Devices</field>
            <field name="model_id" ref="model_uisp_sync"/>
            <field name="state">code</field>
            <field name="code">model.sync_devices()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Sync UISP sites every hour -->
        <record id="ir_cron_sync_uisp_sites" model="ir.cron">
            <field name="name">UISP: Sync Sites</field>
            <field name="model_id" ref="model_uisp_sync"/>
            <field name="state">code</field>
            <field name="code">model.sync_sites()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
